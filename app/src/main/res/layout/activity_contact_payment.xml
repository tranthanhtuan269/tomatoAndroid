<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".activity.ServiceActivity">

    <include
        android:id="@+id/toolBar"
        layout="@layout/title_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bkg_shadow_create_order"
            android:padding="20dp">

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên liên hệ"
                android:textColor="@color/color_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bkg_border_create_order"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.tomato.tuantt.tomatoapp.createorder.CustomEditText
                    android:id="@+id/edtName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:hint="@string/enter_name"
                    android:textColorHint="@color/color_gray"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/color_gray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bkg_border_create_order"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >
                <Spinner
                    android:id="@+id/spPhoneType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:gravity="center_vertical"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:dropDownVerticalOffset="30dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_gray"
                    android:layout_margin="5dp"/>
                <com.tomato.tuantt.tomatoapp.createorder.CustomEditText
                    android:id="@+id/edtPhone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textColorHint="@color/color_gray"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email để nhận biên nhận"
                android:textColor="@color/color_gray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bkg_border_create_order"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.tomato.tuantt.tomatoapp.createorder.CustomEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:hint="@string/enter_email"
                    android:textColorHint="@color/color_gray"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textColor="@color/color_gray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bkg_border_create_order"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Spinner
                    android:id="@+id/spMoneyTYpe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:gravity="center_vertical"
                    android:dropDownVerticalOffset="30dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã khuyến mại(nếu có)"
                android:textColor="@color/color_gray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bkg_border_create_order"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <com.tomato.tuantt.tomatoapp.createorder.CustomEditText
                    android:id="@+id/edtPromotion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textColorHint="@color/color_gray"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/llNext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@drawable/button_corner_create_order"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="a"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:text="@string/next"
                    android:layout_toLeftOf="@id/ivNext"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_next_create_order"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>